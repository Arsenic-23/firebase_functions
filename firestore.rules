rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId
        && !request.resource.data.keys().hasAny(['tokenBalance', 'plan']);
      allow update: if request.auth != null && request.auth.uid == userId 
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['tokenBalance', 'plan']);
      allow delete: if false; // Only backend deletes users
    }

    match /jobs/{jobId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if false; 
    }

    match /creations/{creationId} {
      allow read: if request.auth != null;
      allow write: if false; 
    }

    match /tokenLedger/{ledgerId} {
      allow read, write: if false;
    }

    match /posts/{postId} {
      allow read: if request.auth != null;
      allow write: if false; 
    }

    match /comments/{commentId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /likes/{likeId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /payments/{paymentId} {
      allow read, write: if false;
    }
  }
}